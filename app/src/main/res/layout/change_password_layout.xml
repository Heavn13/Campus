<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:padding="10dp">
        <TextView
            android:id="@+id/account"
            android:text="学号："
            android:gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/account1"
            android:text="1234"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/account"
            android:layout_toEndOf="@+id/account" />

        <TextView
            android:id="@+id/old_password"
            android:text="旧密码："
            android:gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/account"
            android:layout_alignStart="@+id/account"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/new_password1"
            android:text="新密码："
            android:gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/old_password"
            android:layout_alignStart="@+id/old_password"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/new_password2"
            android:text="确认新密码："
            android:gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/new_password1"
            android:layout_alignStart="@+id/new_password1"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/old_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_alignTop="@+id/old_password"
            android:layout_toEndOf="@+id/old_password" />

        <EditText
            android:id="@+id/new_edit1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_alignTop="@+id/new_password1"
            android:layout_toEndOf="@+id/new_password1" />

        <EditText
            android:id="@+id/new_edit2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_alignTop="@+id/new_password2"
            android:layout_toEndOf="@+id/new_password2" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightBlue"
            android:text="确定"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/new_password2"
            android:layout_alignParentStart="true" />

    </RelativeLayout>




</RelativeLayout>