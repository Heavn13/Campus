<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightBlue"
    android:padding="10dp"
    android:layout_margin="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/app_linear_all"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="约"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#ff0804"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/app_type"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:id="@+id/app_type"
        ></Spinner>

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:text="张榜截至时间:" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/detail_linear"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin_month"

        android:entries="@array/app_month"></Spinner>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/spin_day_31"
        android:entries="@array/app_month_day31"></Spinner>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/spin_day_30"
        android:visibility="gone"
        android:entries="@array/app_month_day30"></Spinner>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/spin_day_29"
        android:visibility="gone"
        android:entries="@array/app_month_day29"></Spinner>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/spin_day_28"
        android:visibility="gone"
        android:entries="@array/app_month_day28"></Spinner>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin_hour"
        android:entries="@array/app_hour"></Spinner>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/spin_mintue"
        android:entries="@array/app_minute"></Spinner>

</LinearLayout>
   <EditText
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:layout_marginTop="15dp"
       android:hint="@string/demand"
       android:id="@+id/app_demand"
       android:textSize="15dp"
       android:gravity="start"/>

    <Button
        android:layout_gravity="right"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:id="@+id/go_date_button"
        android:text="确定"
        android:background="@color/lightBlue"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp" />

</LinearLayout>